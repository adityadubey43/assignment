<!DOCTYPE html>
<html lang="en">

<Head>
    <%- include('./partials/Head.ejs')%>
        <meta name="keywords" content="<%= blog.Keywords %>">
        <title><%= blog.title %></title>
</Head>

<body>
    <!-- Nav Section Started -->
    <%- include('./partials/Nav.ejs')%>
        <!--Nav Section Ended-->
        <!-- Blogs First Screen -->
        <div class="display-flex-wrap-aa">
            <div class="blogs">

                <h1 class="single-blog-title">
                    <%= blog.title %>
                </h1>

                <% if(blog.image!=='' ) { %>
                    <img class="blog-image" src="<%= blog.image %>" alt="<%= blog.title %>">
                    <% } %>

                        <% if(blog.snippet!=='' && blog.snippet!==undefined) { %>
                            <div class="blog-body">
                                <h2 class="side-panel-next-blog title-font">
                                    <%= blog.snippet %>
                                </h2>
                            </div>
                            <% } %>

                                <% if(blog.body!=='' && blog.body!==undefined) { %>
                                    <div class="blog-body">
                                        <p class="lead">
                                            <%= blog.body %>
                                        </p>
                                    </div>
                                    <% } %>
                                        <% if(blog.snippet1!=='' && blog.snippet1!==undefined) { %>
                                            <div class="blog-body">
                                                <h2 class="side-panel-next-blog title-font">
                                                    <%= blog.snippet1 %>
                                                </h2>
                                            </div>
                                            <% } %>

                                                <% if(blog.body1!=='' && blog.body1!==undefined) { %>
                                                    <div class="blog-body">
                                                        <p class="lead">
                                                            <%= blog.body1 %>
                                                        </p>
                                                    </div>
                                                    <% } %>
                                                        <% if(blog.image1!=='' && blog.image1!==undefined) { %>
                                                            <img class="blog-image" src="<%= blog.image1%>"
                                                                alt="<%= blog.title %>">
                                                            <% } %>
                                                                <% if(blog.snippet2!=='' && blog.snippet2!==undefined) {
                                                                    %>
                                                                    <div class="blog-body">
                                                                        <h2 class="side-panel-next-blog title-font">
                                                                            <%= blog.snippet2 %>
                                                                        </h2>
                                                                    </div>
                                                                    <% } %>

                                                                        <% if(blog.body2!=='' && blog.body2!==undefined
                                                                            ) { %>
                                                                            <div class="blog-body">
                                                                                <p class="lead">
                                                                                    <%= blog.body2 %>
                                                                                </p>
                                                                            </div>
                                                                            <% } %>
            </div>
        
            <div class="side-blogs-all">
                <div class="redirect-to-egd">
                    <img class="Doctor-image" src="https://cdn.pixabay.com/photo/2017/03/14/03/20/woman-2141808_1280.jpg" alt="">
                    <h1>
                        Get Consulted Now
                    </h1>
                    <a href="https://www.eglobaldoctors.com/">
                        <buttonbtn  class="btn btn-primary">
                            Click Here
                        </button>
                    </a>
                </div>
                <% if(blogs.length>0){ %>
                    <% for(var i=0; i <=4; i++){ %>
                        <div class="blogs-side-panel">
                            <h2 class="side-panel-next-blog">
                                <%= blogs[i].title%>   
                            <% var title = (blogs[i].title.slice(0, 40)).toLowerCase() %>
                            <% title = title.replace(/ /g, "-");%>
                            </h2>
                            <p class="side-panel-next-blog">
                                <%= blogs[i].snippet %>
                            </p>
                            <a href="/<%= title %>/<%= blogs[i].id %>">
                                <button class="btn btn-danger">
                                    Read More
                                </button>
                            </a>
                        </div>
                    <% } %>
                <% } %>


            </div>

        </div>


        <!-- Blogs First Screen Ended -->
        <div class="footer">
            <%- include('./partials/Footer.ejs')%>
        </div>
</body>

</html>